<Window x:Class="Binding_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txb" VerticalAlignment="Top" Margin="142,38,142,0" Height="64"></TextBox>
        <TextBox x:Name="binding" VerticalAlignment="Center" 
                 Margin="81,0,81,0" 
                 Height="52"
                 Text="{Binding Path=Text, ElementName=txb}"></TextBox>
        <Button x:Name="btnBinding" 
                VerticalAlignment="Top"
                Height="28"
                Margin="315,372,315,0"
                Content="{Binding ButtonName}"
                ></Button>

    </Grid>
</Window>
